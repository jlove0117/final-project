<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cst2335.finalproject.OCTranspoBusRouteActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_view"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/progress_bar"

        />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:layout_above="@+id/input_line_number"
        android:visibility="invisible"
        android:layout_gravity="bottom"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/input_line_number"
        android:layout_toStartOf="@id/get_route_button"
        android:gravity="bottom"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:hint="input line number here"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/get_route_button"
        android:text="Get Route"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>